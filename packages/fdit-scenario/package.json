{
    "name": "fdit-scenario",
    "displayName": "fdit-scenario",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "fditscenario",
                "aliases": [
                    "FDITSCENARIO",
                    "fditscenario"
                ],
                "extensions": [
                    ".fditscenario"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fditscenario",
                "scopeName": "source.fditscenario",
                "path": "./syntaxes/fditscenario.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:fditscenario"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "fditscenario-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "test": "jest --coverage",
        "build:worker": "esbuild --minify ./out/language-server/main-browser.js --bundle --format=iife --outfile=../client/react_app/public/monaco/fditscenario-server-worker.js",
        "prepare:public": "npx shx mkdir -p ../client/react_app/public/monaco; npx shx cp -fr ../client/react_app/public/monaco/* ../client/react_app/public/monaco/",
        "copy:monaco-editor-wrapper": "npx shx cp -fr ./node_modules/monaco-editor-wrapper/bundle ../client/react_app/public/monaco/monaco-editor-wrapper",
        "copy:monaco-workers": "npx shx cp -fr ./node_modules/monaco-editor-workers/dist/ ../client/react_app/public/monaco/monaco-editor-workers",
        "build:web": "npm run build && npm run prepare:public && npm run build:worker && npm run copy:monaco-editor-wrapper && npm run copy:monaco-workers"
    },
    "dependencies": {
        "browser-fs-access": "^0.31.2",
        "chalk": "^4.1.2",
        "chevrotain": "^10.4.1",
        "child_process": "^1.0.2",
        "commander": "^8.0.0",
        "esbuild": "0.16.14",
        "express": "^4.18.2",
        "fs": "^0.0.1-security",
        "monaco-editor-workers": "^0.34.2",
        "monaco-editor-wrapper": "^1.6.0",
        "monaco-languageclient": "^4.0.3",
        "path": "^0.12.7",
        "process": "^0.11.10",
        "socket.io": "^4.5.4",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2",
        "vscode-uri": "^3.0.2"
        
    },
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@jest/globals": "^29.3.1",
        "@types/express": "^4.17.15",
        "@types/jest": "^29.2.6",
        "@types/node": "^14.18.36",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "babel-jest": "^29.3.1",
        "eslint": "^8.17.0",
        "jest": "^29.3.1",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "langium-cli": "~1.0.0",
        "typescript": "^4.9.4"
        
    }
}
