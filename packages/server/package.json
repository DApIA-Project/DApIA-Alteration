{
  "name": "@smartesting/dapia-server",
  "engines": {
    "node": "20.12.1",
    "npm": "10.5.0"
  },
  "version": "0.22",
  "description": "",
  "author": "",
  "license": "ISC",
  "scripts": {
    "test": "ts-mocha -p tsconfig.json test/**/*.test.ts --timeout 10000",
    "test:coverage": "nyc --reporter=html ts-mocha -p tsconfig.json 'test/**/*.test.ts'",
    "serve": "node build/server.js",
    "start": "ts-node index.ts",
    "bundle-server": "esbuild index.ts --bundle --platform=node --outfile=build/server.js",
    "bundle": "npm run bundle-server",
    "build": "tsc && npm run bundle",
    "tsc": "tsc",
    "tsc-watch": "tsc --watch",
    "dev": "nodemon app.ts",
    "copy:fs": "npx shx cp -fr ./node_modules/fs/ ./public/fs",
    "preinstall": "cd ../alteration-scenario && npm i && npm run build-production",
    "migrate": "node-pg-migrate --tsconfig=tsconfig.json --ignore-pattern=\".*(js|md)\"",
    "migrate:built": "node-pg-migrate --verbose --ignore-pattern=\".*(ts|md)\" up",
    "scalingo-postdeploy": "npm run migrate:built"
  },
  "dependencies": {
    "@dapia-project/data-converter": "^4.0.0",
    "@smartesting/alteration-scenario": "file:../alteration-scenario",
    "@smartesting/shared": "file:../shared",
    "@teppeis/multimaps": "^3.0.0",
    "@types/cors": "^2.8.13",
    "cors": "^2.8.5",
    "esbuild": "^0.15.13",
    "express": "^4.18.2",
    "pg-hstore": "^2.3.4",
    "react": "^18.2.0",
    "sequelize": "^6.29.3",
    "node-pg-migrate": "^6.2.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "pg": "^8.11.3",
    "supertest": "^6.3.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
