{
  "include": ["src"],
  "exclude": ["node_modules", "tests"],
  "compilerOptions": {
		"allowJs": true,
    "incremental": true,
    "target": "esnext",
    "outDir": "build",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "lib": ["ES2021"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  }
}
